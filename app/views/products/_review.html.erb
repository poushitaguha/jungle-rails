<dl class="dl-horizontal">
  <dt>Reviewed By</dt>
  <dd><%= user.name %></dd>
  <dd style="margin-left: 185px;"><%= review.description %></dd>
  <dt>Rating</dt>
  <dd><%= review.rating %>/5</dd>
  <% if current_user && current_user.id === user.id %>  
    <dd style="margin-left: 80%;">
        <%= link_to fa_icon('trash'), review, class: 'btn btn-sm btn-danger', method: :delete, data: { confirm: "Are you sure you want to delete this review?" } %>
    </dd>  
  <% end %>
</dl>